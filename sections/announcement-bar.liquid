<div class="announcement-bar color-{{ section.settings.color_scheme }} gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ section.shopify_attributes }}>
  <div class="page-width">
    <div class="top-carousel owl-carousel owl-theme">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'announcement' -%}
      {%- if block.settings.text != blank -%}
      <div class="item">
        {%- if block.settings.link != blank -%}
        <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
          <p class="announcement-bar__message h5">
            {{ block.settings.text | escape }}
            {%- if block.settings.link != blank -%}
            {% render 'icon-arrow' %}
            {%- endif -%}
          </p>
          {%- if block.settings.link != blank -%}
        </a>
        {%- endif -%}
      </div>
      {%- endif -%}

      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<marquee class="scrollTop"  scrollamount="1.8", scrolldelay="15">
  {%- for block in section.blocks -%}
  <p class="announcement-bar__message h5"> {{ block.settings.text }} {%- if block.settings.link != blank -%} {% render 'icon-arrow' %} {%- endif -%} </p>
  {%- endfor -%}
  {%- for block in section.blocks -%}
  <p class="announcement-bar__message h5"> {{ block.settings.text }} {%- if block.settings.link != blank -%} {% render 'icon-arrow' %} {%- endif -%} </p>
  {%- endfor -%}
  {%- for block in section.blocks -%}
  <p class="announcement-bar__message h5"> {{ block.settings.text }} {%- if block.settings.link != blank -%} {% render 'icon-arrow' %} {%- endif -%} </p>
  {%- endfor -%}
</marquee>



<script>
  $(document).ready(function() {
    $('.top-carousel').owlCarousel({
      loop: true,
      margin: 10,
      dots: false,
      autoplay:true,
autoplayTimeout:2000,
autoplayHoverPause:true,
      responsiveClass: true,
      responsive: {
        0: {
          items: 1
        },
        600: {
          items: 1
        },
        1000: {
          items: 1
        }
      }
    })
  })
</script>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.header.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.header.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.header.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.header.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.header.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.header.settings.color_scheme.label"
    },
    {
      "type": "select",
      "id": "announce_type",
      "options": [
        {
          "value": "carousel",
          "label": "Carousel"
        },
        {
          "value": "rotating",
          "label": "Marquee"
        }
      ],
      "default": "carousel",
      "label": "Style"
    }
	],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
